@using Sandbox;
@using Sandbox.UI;

@inherits Sandbox.UI.NavHostPanel
@implements Sandbox.Menu.IGameMenuPanel
@attribute [StyleSheet]
@namespace Facepunch.Boomer.MainMenu

<root>
    <HeaderComponent />

    <div class="body">
        <div class="navigator-canvas" slot="navigator-canvas" />
    </div>

    <FooterComponent />
</root>

@code
{
    public MainMenu()
    {
        DefaultUrl = "/";
        AddDestination( "/", typeof( HomePage ) );
        AddDestination( "/settings", typeof( SettingsPage ) );
        AddDestination( "/customize", typeof( CustomizePage ) );
        AddDestination( "/servers", typeof( ServerListPage ) );
        AddDestination( "/play", typeof( PlayPage ) );
        AddDestination( "/servers/setup", typeof( SetupGame ) );
        AddDestination( "/stats", typeof( StatsPage ) );
    }
}